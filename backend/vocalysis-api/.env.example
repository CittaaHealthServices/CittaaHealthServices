# Vocalysis API Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Configuration (REQUIRED)
# Get connection string from MongoDB Atlas
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET_KEY=your-secure-secret-key-here

# Cashfree Payment Gateway (REQUIRED for payments)
CASHFREE_CLIENT_ID=your-cashfree-client-id
CASHFREE_CLIENT_SECRET=your-cashfree-client-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@cittaa.in

# Encryption Key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here
