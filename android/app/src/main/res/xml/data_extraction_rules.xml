<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as needed.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for more information.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="database" path="vocalysis.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device-to-device transfer for user convenience -->
        <include domain="sharedpref" path="."/>
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>
